<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/f_search_artist_margin_horizontal"
    android:layout_marginLeft="@dimen/f_search_artist_margin_horizontal">
    <EditText
        android:id="@+id/f_search_artist_et_artist"
        android:layout_marginTop="@dimen/f_search_artist_et_artist_margin_vertical"
        android:layout_marginBottom="@dimen/f_search_artist_et_artist_margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        />
    <ListView
        android:id="@+id/f_search_artist_lv_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>